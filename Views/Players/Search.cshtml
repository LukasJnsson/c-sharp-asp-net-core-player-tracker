
@model c_sharp_asp_net_core_player_tracker.Models.Player

@{
    ViewData["Title"] = "Search Player";
}


<h4>Player Search</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchResults">
            <div class="form-group">
                <label for="player" class="control-label"></label>
                <input name="player" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>